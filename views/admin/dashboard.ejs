<!DOCTYPE html>
<html lang="en">
  <head>
     <link
    href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500&display=swap"
    rel="stylesheet"
  />
  <link rel="stylesheet" href="/css/style.css" />
    <title>Admin Dashboard</title>
  </head>
  <body>
    <div class="admin-wrapper">

      <!-- Top bar -->
      <header class="top-bar">
        <div class="top-bar-left">
          <h1>Admin Dashboard</h1>
        </div>
      </header>

      <!-- Admin info + logout -->
      <div class="admin-meta-bar">
        <div class="admin-meta">
          <span>Welcome, <strong><%= admin.username || 'Admin' %></strong></span>
          <a href="/admin/logout" class="logout-button">Logout</a>
        </div>
      </div>

      <!-- Main content -->
      <main class="admin-main">
        <div class="search-bar">
          <form method="GET" action="/admin/dashboard">
            <input
              type="search"
              name="search"
              class="search-input"
              placeholder="Search users by name..."
              value="<%= searchTerm || '' %>"
            />
          </form>
        </div>

        <table class="admin-table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Admin</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(function(user) { %>
              <tr>
                <td><%= user.username || 'N/A' %></td>
                <td><%= user.email %></td>
                <td><%= user.isAdmin ? 'Yes' : 'No' %></td>
                <td>
                  <a href="/admin/users/edit/<%= user._id %>" class="action-link edit">Edit</a>
                  <a href="/admin/users/delete/<%= user._id %>" class="action-link delete" onclick="return confirm('Are you sure?')">Delete</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </main>
    </div>
  </body>
</html>
